{
  "name": "blogger",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc -b && vite build",
    "preview": "vite preview",
    "test:coverage": "jest --coverage",
    "populate:db": "npx tsx ./src/utils/mockServer/setupDb.ts",
    "start:backend": "json-server --watch ./src/utils/mockServer/db.json --port 3000",
    "generate:types": "npx openapi-typescript ./public/openapi.yaml -o ./src/types/generated/schema.d.ts",
    "start": "concurrently \"npm run dev\" \"npm run start:backend\""
  },
  "dependencies": {
    "@faker-js/faker": "^9.5.1",
    "axios": "^1.8.1",
    "json-server": "^1.0.0-beta.3",
    "quil": "^1.1.30",
    "vue": "^3.5.13",
    "vue-router": "^4.5.0",
    "vue3-toastify": "^0.2.8"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/user-event": "^14.6.1",
    "@testing-library/vue": "^8.1.0",
    "@types/jest": "^29.5.14",
    "@vitejs/plugin-vue": "^5.2.1",
    "@vue/tsconfig": "^0.7.0",
    "concurrently": "^9.1.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "ts-jest": "^29.2.6",
    "typescript": "~5.7.2",
    "vite": "^6.2.0",
    "vue-tsc": "^2.2.4"
  }
}
